<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0d0d0d"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_dich"
        android:layout_margin="8dp"
        android:padding="4dp"
        >
        <ImageView
            android:id="@+id/imgicon"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_loa"
            android:src="@drawable/megaphoneoff"
            android:layout_width="40sp"
            android:layout_height="40sp" />
        <TextView
            android:layout_gravity="center"
            android:id="@+id/txtTenChap"
            android:text="1. Ten Chap"
            android:textSize="18sp"
            android:layout_marginLeft="3dp"
            android:textColor="#ffffff"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:id="@+id/txtChapName"
            android:text="chap name"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>